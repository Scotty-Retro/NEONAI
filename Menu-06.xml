<theme>
   <formatVersion>7</formatVersion>

      <view name="system">

<carousel name="systemcarousel">
<defaultTransition>fade</defaultTransition>
<zIndex>999</zIndex>
<maxLogoCount>1</maxLogoCount>
<color>ffffff00</color>
<colorEnd>ffffff00</colorEnd>
<color>00000000</color>
<colorEnd>00000000</colorEnd>
<logoSize>0.11 0.11</logoSize>
<logoScale>3</logoScale>
<size>1 1</size>
<pos>0 0.32</pos>
</carousel>

		<text name="logoText">
		<pos>0.2 0.8</pos>
	    <fontSize>0.04</fontSize>
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
	    <size>0.3 0.3</size>
		<alignment>center</alignment>
		<rotation>0</rotation>
        <color>FF10F0</color>
		<glowColor>1F51FF</glowColor>
        <forceUppercase>1</forceUppercase>   
	    <zIndex>999</zIndex>
    </text>


      <text name="systemInfo">
        <pos>0.02 0.15</pos>
		<glowColor>1F51FF</glowColor>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color> 
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
	    <fontSize>0.060</fontSize>
        <zIndex>999</zIndex>
      </text> 

	 <video name="backgroundvideo" extra="true">
        <default>./_inc/scotty.mp4</default>
        <visible>true</visible>
        <path>{random}</path>              
        <pos>0.23 0</pos>
        <size>0.62 1</size>
        <delay>0</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
      <storyboard>
        <animation property="offsetX" from="-0.2" to="0" duration="500" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="500" mode="easeIn" />
      </storyboard>
        <zIndex>2</zIndex>
     </video>
	 	

	   <image name="girlleft" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./_inc/left.png</path>
		 <zIndex>25</zIndex>
      </image>  

	   <image name="girlright" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./_inc/right.png</path>
		 <zIndex>25</zIndex>
      </image>  

	       <helpsystem name="help">
	 <iconColor>1F51FF</iconColor>
     <fontSize>0.035</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.55 0.985</pos>
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
     </helpsystem>


       </view>
    </theme>
