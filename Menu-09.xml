<theme>
   <formatVersion>7</formatVersion>

      <view name="system">


         <carousel name="systemcarousel">
          <zIndex>999</zIndex>	      
          <type>horizontal_wheel</type>
          <pos>0 0.1</pos>
          <size>1.1 1</size>
          <logoSize>0.2 0.2</logoSize>
          <color>00000000</color>
          <maxLogoCount>5</maxLogoCount>
          <logoRotation>35</logoRotation>
          <logoRotationOrigin>0.3 6.5</logoRotationOrigin>
          <logoAlignment>center</logoAlignment>       
         </carousel>

		<text name="logoText">
		<pos>0.2 0.8</pos>
	    <fontSize>0.04</fontSize>
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
	    <size>0.3 0.3</size>
		<alignment>center</alignment>
		<rotation>0</rotation>
        <color>FF10F0</color>
		<glowColor>1F51FF</glowColor>
        <forceUppercase>1</forceUppercase>   
	    <zIndex>20</zIndex>
    </text>


      <text name="systemInfo">
		<glowColor>1F51FF</glowColor>
        <pos>0.05 0.2</pos>
        <delay>0</delay>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color> 
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
	    <fontSize>0.040</fontSize>
        <zIndex>999</zIndex>
      </text> 

	   <image name="menu9bg" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <size>1 1</size>
         <path>./_inc/menu9.png</path>
		 <zIndex>25</zIndex>
      </image>
	 	
	 <video name="backgroundvideo" extra="true">
        <default>./_inc/scotty.mp4</default>
        <visible>true</visible>
        <path>{random}</path>              
        <pos>0.53 0.435</pos>
        <origin>0.5 0.5</origin>
        <size>0.375 0.385</size>
        <delay>0</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
      <storyboard>
        <animation property="offsetX" from="0.2" to="0" duration="500" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="500" mode="easeIn" />
      </storyboard>
        <zIndex>1</zIndex>
     </video>
 
	       <helpsystem name="help">
	 <iconColor>1F51FF</iconColor>
     <fontSize>0.035</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5125 0.985</pos>
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
     </helpsystem>


       </view>
    </theme>
