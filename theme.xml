<!---------------------------screen------------------------------------- -->

<view name="screen">
<text name="clock">
		<glowColor>FF10F0</glowColor>
		<fontSize>0.024</fontSize>
		<color>ffffff</color>
		<fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
		<pos>2 2</pos>
		<size>0.05 0.058</size>
		<verticalAlignment>right</verticalAlignment>
		</text>
		
		
     <controllerActivity name="controllerActivity">
      <pos>0.01 0.010</pos>
      <size>0.085 0.025</size>
      <itemSpacing>0.003</itemSpacing>
      <imagePath>./_inc/gamepad.svg</imagePath>
      <color>FFFFFF1A</color>
      <activityColor>ff00001A</activityColor>
      <hotkeyColor>ffffff1A</hotkeyColor>
    </controllerActivity>

    <batteryIndicator name="batteryIndicator">
      <pos>0.955 0.0125</pos>
      <size>0.033 0.033</size>
      <incharge>./_inc/battery/incharge.svg</incharge>
      <full>./_inc/battery/full.svg</full>
      <at75>./_inc/battery/75.svg</at75>
      <at50>./_inc/battery/50.svg</at50>
      <at25>./_inc/battery/25.svg</at25>
      <empty>./_inc/battery/empty.svg</empty>
      <color>FFFFFFA0</color>
      </batteryIndicator>
      <batteryIndicator name="batteryIndicator" tinyScreen="true">
      <pos>0.915 0.013</pos>
      <size>0.07 0.07</size>
      </batteryIndicator>
    </view>

<!---------------------------menu------------------------------------- -->

  <view name="menu">
   
      <menuText name="menutitle">
         <fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
        <color>1F51FF</color>
        <backgroundColor>00000000</backgroundColor>
         <fontSize>0.04</fontSize>
      </menuText>
	  
      <menuText name="menufooter">
        <color>1F51FF</color>
	<glowColor>FF10F0</glowColor>
         <fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
         <fontSize>0.023</fontSize>
      </menuText>
	  
    <menuText name="menutext">
        <color>1F51FF</color>
      <fontPath>./_inc/fonts/RobotsReborn.ttf</fontPath>
      <fontSize>0.029</fontSize>
      <selectorGradientType>horizontal</selectorGradientType>
    </menuText>
	
    <menuTextSmall name="menutextsmall">
      <fontPath>./_inc/RobotsReborn.ttf</fontPath>
      <fontSize>0.022</fontSize>
    </menuTextSmall>
	
    <menuBackground name="menubg">
	  <path>./_inc/back.png</path>
      <path>./_inc/frame.png</path>
	  <cornerSize>32 32</cornerSize>
    </menuBackground>

    <menuTextEdit name="menutextedit">
